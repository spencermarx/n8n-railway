    {
      "id": "parse-context",
      "name": "Parse Context",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        420,
        300
      ],
      "parameters": {
        "jsCode": "const input = $input.first().json;\n\n// Parse slack_context - may come as object or JSON string\nlet slackContext = input.slack_context;\nif (typeof slackContext === 'string') {\n  try {\n    slackContext = JSON.parse(slackContext);\n  } catch (e) {\n    return [{\n      json: {\n        valid: false,\n        error: 'Invalid slack_context: must be valid JSON object'\n      }\n    }];\n  }\n}\n\n// Validate required fields\nif (!slackContext?.channel_id) {\n  return [{\n    json: {\n      valid: false,\n      error: 'Missing required field: channel_id in slack_context'\n    }\n  }];\n}\n\nif (!slackContext?.thread_ts) {\n  return [{\n    json: {\n      valid: false,\n      error: 'Missing required field: thread_ts in slack_context (required for thread replies)'\n    }\n  }];\n}\n\nif (!input.message || input.message.trim() === '') {\n  return [{\n    json: {\n      valid: false,\n      error: 'Missing required field: message'\n    }\n  }];\n}\n\nreturn [{\n  json: {\n    valid: true,\n    channel_id: slackContext.channel_id,\n    thread_ts: slackContext.thread_ts,\n    message: input.message.trim()\n  }\n}];"
      }
    },
    {
      "id": "check-valid",
      "name": "Is Valid?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2.3,
