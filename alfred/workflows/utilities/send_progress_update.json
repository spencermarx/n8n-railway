    {
      "id": "format-success",
      "name": "Format Success",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1080,
        200
      ],
      "parameters": {
        "jsCode": "const result = $input.first().json;\nconst input = $('Workflow Input').first().json;\n\nif (result.success === false) {\n  return [{\n    json: {\n      success: false,\n      error: result.error || 'Failed to send progress update'\n    }\n  }];\n}\n\nreturn [{\n  json: {\n    success: true,\n    message_sent: input.message,\n    channel: result.channel,\n    ts: result.ts\n  }\n}];"
      }
