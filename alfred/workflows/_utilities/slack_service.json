    {
      "id": "format-response",
      "name": "Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        920,
        300
      ],
      "parameters": {
        "jsCode": "const input = $('Workflow Input').first().json;\nconst result = $input.first().json;\n\n// Slack API returns ok: true/false\nif (result.ok === false) {\n  return [{\n    json: {\n      success: false,\n      action: input.action,\n      error: result.error || 'Unknown Slack API error',\n      error_detail: result.response_metadata?.messages || null\n    }\n  }];\n}\n\n// Format successful response based on action\nconst response = {\n  success: true,\n  action: input.action\n};\n\nswitch (input.action) {\n  case 'post_message':\n  case 'post_thread':\n    response.channel = result.channel;\n    response.ts = result.ts;\n    response.message = result.message;\n    break;\n  case 'update_message':\n    response.channel = result.channel;\n    response.ts = result.ts;\n    break;\n  case 'get_user_info':\n    response.user = result.user;\n    break;\n}\n\nreturn [{ json: response }];"
      }
    },
