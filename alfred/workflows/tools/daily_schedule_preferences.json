    {
      "id": "format-update",
      "name": "Format Update Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        1770,
        240
      ],
      "parameters": {
        "jsCode": "const result = $input.first().json;\nconst buildData = $('Build Update Query').first().json;\nconst time = result.scheduled_time ? result.scheduled_time.substring(0, 5) : buildData.time;\nconst timezone = buildData.timezone;\nconst channels = result.channels || buildData.channels;\n\nlet message = '';\nif (result.is_active) {\n  message = `Daily schedule enabled! You'll receive your schedule at ${time} (${timezone}) via ${channels.join(' and ')}. Next run: ${result.next_run_at}`;\n} else {\n  message = 'Daily schedule has been disabled.';\n}\n\nreturn [{\n  json: {\n    success: true,\n    action: 'update',\n    timezone: timezone,\n    daily_schedule: {\n      enabled: result.is_active,\n      time: time,\n      channels: channels\n    },\n    next_run: result.next_run_at,\n    message: message\n  }\n}];"
      }
