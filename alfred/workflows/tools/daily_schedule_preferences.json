    {
      "id": "format-get",
      "name": "Format Get Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        890,
        140
      ],
      "parameters": {
        "jsCode": "const user = $input.first().json;\nconst userTimezone = user.user_timezone || 'America/New_York';\n\n// Check if user has a Daily Schedule task\nif (!user.task_id) {\n  return [{\n    json: {\n      success: true,\n      action: 'get',\n      timezone: userTimezone,\n      daily_schedule: {\n        enabled: false,\n        time: null,\n        channels: []\n      },\n      message: 'Daily schedule is not configured. Use update action to set it up.'\n    }\n  }];\n}\n\nconst settings = {\n  enabled: user.is_active,\n  time: user.scheduled_time ? user.scheduled_time.substring(0, 5) : '08:00',\n  channels: user.channels || ['slack']\n};\n\nreturn [{\n  json: {\n    success: true,\n    action: 'get',\n    timezone: userTimezone,\n    daily_schedule: settings,\n    next_run: user.next_run_at,\n    message: settings.enabled \n      ? `Daily schedule is enabled at ${settings.time} (${userTimezone}) via ${settings.channels.join(' and ')}. Next run: ${user.next_run_at}`\n      : 'Daily schedule is currently disabled.'\n  }\n}];"
      }
    },
    {
      "id": "build-update",
      "name": "Build Update Query",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        890,
        300
      ],
      "parameters": {
        "jsCode": "const input = $('Workflow Input').item.json;\nconst user = $('Get User').first().json;\n\n// Parse inputs\nconst enabled = input.enabled === 'true' || input.enabled === true || input.enabled === undefined;\nconst time = input.time || '08:00';\nconst timezoneUpdate = input.timezone || null;\nconst userTimezone = timezoneUpdate || user.user_timezone || 'America/New_York';\n\n// Parse channels\nlet channels = ['slack'];\nif (input.channels) {\n  if (typeof input.channels === 'string') {\n    channels = input.channels.split(',').map(c => c.trim().toLowerCase());\n  } else if (Array.isArray(input.channels)) {\n    channels = input.channels;\n  }\n}\n\n// Validate channels\nconst validChannels = ['slack', 'email'];\nchannels = channels.filter(c => validChannels.includes(c));\nif (channels.length === 0) channels = ['slack'];\n\n// Validate time format (HH:MM)\nconst timeRegex = /^([01]?[0-9]|2[0-3]):[0-5][0-9]$/;\nif (!timeRegex.test(time)) {\n  return [{\n    json: {\n      success: false,\n      is_valid: false,\n      error: `Invalid time format '${time}'. Please use HH:MM format (e.g., 08:00, 14:30).`\n    }\n  }];\n}\n\nreturn [{\n  json: {\n    user_id: user.id,\n    slack_user_id: input.slack_user_id,\n    task_id: user.task_id,\n    has_existing_task: !!user.task_id,\n    time: time,\n    channels: channels,\n    timezone: userTimezone,\n    timezone_update: timezoneUpdate,\n    is_active: enabled,\n    is_valid: true\n  }\n}];"
      }
    },
