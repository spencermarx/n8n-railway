    {
      "id": "create-task",
      "name": "Create New Task",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [
        1550,
        300
      ],
      "parameters": {
        "operation": "executeQuery",
        "query": "=WITH new_task AS (\n  INSERT INTO alfred.scheduled_tasks (\n    user_id, name, description, request, schedule_type, \n    scheduled_time, channels, is_active, next_run_at\n  ) VALUES (\n    {{ $json.user_id }},\n    'Daily Schedule',\n    'Daily calendar summary',\n    'Get my calendar events for today and send me a comprehensive summary. Include key meetings, work time stats, and any preparation notes for important meetings.',\n    'daily',\n    '{{ $json.time }}'::TIME,\n    ARRAY[{{ $json.channels.map(c => \"'\" + c + \"'\").join(',') }}],\n    {{ $json.is_active }},\n    alfred.calculate_next_run(\n      'daily',\n      '{{ $json.timezone }}',\n      NULL,\n      '{{ $json.time }}'::TIME,\n      NULL,\n      NULL,\n      NULL\n    )\n  )\n  RETURNING id, scheduled_time, channels, is_active, next_run_at\n)\n{{ $json.timezone_update ? \"UPDATE alfred.users SET preferences = jsonb_set(COALESCE(preferences, '{}'::jsonb), '{timezone}', '\\\"\" + $json.timezone_update + \"\\\"'::jsonb) WHERE slack_user_id = '\" + $json.slack_user_id + \"';\" : '' }}\nSELECT * FROM new_task;",
        "options": {}
      },
      "credentials": {
