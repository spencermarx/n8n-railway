      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [
        1550,
        180
      ],
      "parameters": {
        "operation": "executeQuery",
        "query": "=WITH updated_task AS (\n  UPDATE alfred.scheduled_tasks\n  SET \n    scheduled_time = '{{ $json.time }}'::TIME,\n    channels = ARRAY[{{ $json.channels.map(c => \"'\" + c + \"'\").join(',') }}],\n    is_active = {{ $json.is_active }},\n    next_run_at = alfred.calculate_next_run(\n      'daily',\n      '{{ $json.timezone }}',\n      NULL,\n      '{{ $json.time }}'::TIME,\n      NULL,\n      NULL,\n      NULL\n    ),\n    updated_at = NOW()\n  WHERE id = {{ $json.task_id }}\n  RETURNING id, scheduled_time, channels, is_active, next_run_at\n)\n{{ $json.timezone_update ? \"UPDATE alfred.users SET preferences = jsonb_set(COALESCE(preferences, '{}'::jsonb), '{timezone}', '\\\"\" + $json.timezone_update + \"\\\"'::jsonb) WHERE slack_user_id = '\" + $json.slack_user_id + \"';\" : '' }}\nSELECT * FROM updated_task;",
        "options": {}
      },
      "credentials": {
